<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="16dp"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_example_circle"
        >
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="userName"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:fontFamily="@font/rocco_regular"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/txt_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:drawableLeft="@drawable/ic_grade_black_24dp"
            android:text="score"
            android:layout_weight="8"
            android:textSize="24sp"
            android:fontFamily="@font/rocco_regular"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@drawable/grade_icon_rangking"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>